// src/pages/api/proxy-backend.ts
import type { NextApiRequest, NextApiResponse } from 'next';
import { GoogleAuth } from 'google-auth-library';

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  try {
    const auth = new GoogleAuth();
    const client = await auth.getIdTokenClient('https://your-backend-service-xyz.a.run.app');

    const response = await client.request({
      url: 'https://your-backend-service-xyz.a.run.app/your-endpoint',
      method: 'GET', // or POST, etc. based on backend
    });

    res.status(200).json(response.data);
  } catch (error) {
    console.error('Proxy error:', error);
    res.status(500).json({ error: 'Failed to reach backend service' });
  }
}