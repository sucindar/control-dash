import type { NextApiRequest, NextApiResponse } from 'next';
import { GoogleAuth } from 'google-auth-library';

const backendUrl = process.env.BACKEND_URL; // âœ… Loaded from env (not exposed to browser)

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  try {
    const auth = new GoogleAuth();
    const client = await auth.getIdTokenClient(backendUrl!); // add ! if you're sure it's set

    const response = await client.request({
      url: `${backendUrl}/refresh`,
      method: 'POST',
    });

    res.status(response.status).json(response.data);
  } catch (error) {
    console.error('Error calling backend:', error);
    res.status(500).json({ error: 'Failed to reach backend' });
  }
}